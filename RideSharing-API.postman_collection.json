{
  "info": {
    "name": "RideShare Backend API",
    "description": "Updated API collection for Ride Sharing Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8082",
      "type": "string"
    },
    {
      "key": "userToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "driverToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "rideId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register New User",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"sam2025\",\n  \"password\": \"user@123\",\n  \"role\": \"ROLE_USER\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/register"
          }
        },
        {
          "name": "Register Driver",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"driver_x\",\n  \"password\": \"drive@456\",\n  \"role\": \"ROLE_DRIVER\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/register"
          }
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var json = pm.response.json();",
                  "pm.collectionVariables.set(\"userToken\", json.token);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"sam2025\",\n  \"password\": \"user@123\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/login"
          }
        },
        {
          "name": "Login Driver",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var json = pm.response.json();",
                  "pm.collectionVariables.set(\"driverToken\", json.token);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"driver_x\",\n  \"password\": \"drive@456\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/login"
          }
        }
      ]
    },

    {
      "name": "User Operations",
      "item": [
        {
          "name": "Create Ride Request",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var json = pm.response.json();",
                  "pm.collectionVariables.set(\"rideId\", json.id);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{userToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"pickupLocation\": \"Whitefield\",\n  \"dropLocation\": \"MG Road\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/rides"
          }
        },
        {
          "name": "Get My Ride History",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{userToken}}" }
            ],
            "url": "{{baseUrl}}/api/v1/user/rides"
          }
        }
      ]
    },

    {
      "name": "Driver Operations",
      "item": [
        {
          "name": "Fetch Pending Rides",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{driverToken}}" }
            ],
            "url": "{{baseUrl}}/api/v1/driver/rides/requests"
          }
        },
        {
          "name": "Accept Customer Ride",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{driverToken}}" }
            ],
            "url": "{{baseUrl}}/api/v1/driver/rides/{{rideId}}/accept"
          }
        }
      ]
    },

    {
      "name": "Ride Operations",
      "item": [
        {
          "name": "Complete Ride (User)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{userToken}}" }
            ],
            "url": "{{baseUrl}}/api/v1/rides/{{rideId}}/complete"
          }
        },
        {
          "name": "Complete Ride (Driver)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{driverToken}}" }
            ],
            "url": "{{baseUrl}}/api/v1/rides/{{rideId}}/complete"
          }
        }
      ]
    }
  ]
}
